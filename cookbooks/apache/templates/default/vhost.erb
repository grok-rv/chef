#vhost template file
<% if @port == 80 -%>
	NameVirtualHost *:80
<% end -%>
<VirtualHost *:<%= @port %>>
	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>
  <Directory />
   Options FollowSymLinks
   AllowOverride None
   #Allow from all
  </Directory>
  <Directory <%= @document_root %> >
   Options Indexes FollowSymLinks MultiViews
   AllowOverride None
   Order allow,deny
   allow from all
  </Directory>
  DirectoryIndex index.php index.html
</VirtualHost> 
